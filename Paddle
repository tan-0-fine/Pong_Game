public class Paddle {
    public int x, y;
    
    public Paddle(int x, int y) {
        this.x = x;
        this.y = y;
    }

    public void moveUp() {
        y = Math.max(0, y - 5); // trước là 10
    }
    public void moveDown() {
        y = Math.min(Config.HEIGHT - Config.PADDLE_HEIGHT, y + 5);
    }

}
